<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity_privacy">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/privacy_disease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="지병 및 복용중인 약"/>

    <EditText
        android:id="@+id/privacy_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="자주 가는 장소"/>

    <EditText
        android:id="@+id/privacy_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="보호자 연락처 1"
        />

    <EditText
        android:id="@+id/privacy_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="보호자 연락처 2"
        />

    <EditText
        android:id="@+id/privacy_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="주소"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/privacy_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입"
            android:ems="6"
            android:layout_marginRight="10dp"
            android:backgroundTint="#008037"/>

        <Button
            android:id="@+id/privacy_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            android:textSize="13dp"
            android:ems="6"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#008037"/>
    </LinearLayout>
</LinearLayout>